{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "pro.softsoft.qi-launch",
  "version": "0.1.0",
  "productName": "qiLaunch",
  "mainBinaryName": "qiLaunch",
  "build": {
    "devUrl": "http://localhost:1422",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "软软启动台",
        "label": "main",
        "width": 800,
        "height": 600,
        "center": true,
        "decorations": false,
        "resizable": true,
        "maximized": true,
        "transparent": true,
        "windowEffects": {
          "effects": ["hudWindow", "acrylic", "mica"],
          "radius": 12
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "createUpdaterArtifacts": false,
    "publisher": "softsoft.pro",
    "category": "Utility",
    "shortDescription": "软软启动台",
    "longDescription": "软软启动台",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
